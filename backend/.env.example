# Application Settings
APP_NAME=Planning Precedent AI
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_LLM_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# AWS Configuration (for Textract)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-2
USE_AWS_TEXTRACT=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Scraper Configuration
CAMDEN_PORTAL_URL=https://camdocs.camden.gov.uk/HPRMWebDrawer/PlanRec
SCRAPE_RATE_LIMIT=2.0
SCRAPE_MAX_CONCURRENT=3
SCRAPE_START_DATE=2015-01-01
SCRAPE_END_DATE=2024-12-31

# Target Wards (Camden)
TARGET_WARDS=Hampstead Town,Belsize,Frognal,Swiss Cottage,West Hampstead,Kilburn,Fortune Green,Gospel Oak,Kentish Town,Camden Town

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOCUMENT=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_OCR=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# UK Specific Settings
UK_TIMEZONE=Europe/London
DATE_FORMAT=%d/%m/%Y
